<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.myappportfolio.MainActivity"
    android:background="#f9f4f4">

    <TextView
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="@string/my_nanodegree_apps"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:layout_alignParentEnd="false"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#181313"
        android:textSize="20sp" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="@string/popular_movies"
        android:id="@+id/button1"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentTop="true"
        android:layout_marginTop="81dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:background="#293a3a"
        android:onClick="clickPmoives"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="@string/stock_hawk"
        android:id="@+id/button2"
        android:layout_gravity="center"
        android:layout_below="@+id/button1"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:background="#293a3a"
        android:onClick="clickStockHawk"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="@string/build_it_bigger"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:background="#293a3a"
        android:onClick="clickBuildIt"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="@string/make_your_app_material"
        android:id="@+id/button4"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:background="#293a3a"
        android:onClick="clickMakeApp"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="@string/go_ubiquitous"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:background="#293a3a"
        android:onClick="clickGoUbt"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="@string/capstone"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:background="#293a3a"
        android:onClick="clickCapstone"/>


</RelativeLayout>
